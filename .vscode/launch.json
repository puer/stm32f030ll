  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cortex Debug (OpenOCD)",
      "cwd": "${workspaceRoot}",
      "executable": "./build/llefan.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "device": "STM32F030F4",
      "swoConfig": {
        "cpuFrequency": 72000000,
        "swoFrequency": 2000000,
        "enabled": false,
        "source": "probe",
        "decoders": [
          {
            "port": 0,
            "encoding": "ascii",
            "label": "OLED",
            "type": "console"
          }
        ]
      },
      "armToolchainPath": "${env:ARMGCC_HOME}/bin",
      "configFiles": [
        "${env:OPENOCD_HOME}/scripts/interface/stlink-v2.cfg",
        "${env:OPENOCD_HOME}/scripts/target/stm32f0x.cfg"
      ]
    }
  ]
}
